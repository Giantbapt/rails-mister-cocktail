<h1>My Cocktail's List</h1>
<ul><% @cocktails.each do |cocktail| %>
  <li><%=link_to cocktail[:name], cocktail_path(cocktail)%>
    ---
    <%= link_to "Delete", cocktail_path(cocktail),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
  </li>
  <% end %>
</ul>

<%= link_to "Add a new cocktail", new_cocktail_path, class: "btn btn-primary" %>
